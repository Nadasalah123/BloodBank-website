@{

    ViewData["Title"] = "Donate ";
}

<script>

    let scrollerId;

    function startScroll() {
        let id = setInterval(function () {
            window.scrollTo(0, 750);
            if (window.scrollY == 750) {
                stopScroll();
            }
        }, 350);

        return id;
    }

    function stopScroll() {
        clearInterval(scrollerId);
    }

    scrollerId = startScroll();

</script>
@model Donors
<!-- ======= Donate Section ======= -->
<section id="appointment" class="appointment section-bg">
    <div class="container">

        <div class="section-title">
            <h2>Make a Blood Donation</h2>
            <p> Donate blood and be the reason for someone's existence.</p>
        </div>

        <form asp-controller="Donate" asp-action="Donation" method="post" role="form">
            <div class="row">
                <div class="col-md-4 form-group">
                    <input type="text"  name="name" class="form-control" id="name" placeholder="Your Name" data-rule="minlen:4" data-msg="Please enter at least 4 chars">
                    <div class="validate"></div>
                </div>
                <div class="col-md-4 form-group mt-3 mt-md-0">
                    <input type="email" class="form-control" name="email" id="email" placeholder="Your Email" data-rule="email" data-msg="Please enter a valid email">
                    <div class="validate"></div>
                </div>
                <div class="col-md-4 form-group mt-3 mt-md-0">
                    <input type="tel" class="form-control" name="phone" id="phone" placeholder="Your Phone" data-rule="minlen:4" data-msg="Please enter at least 4 chars">
                    <div class="validate"></div>
                </div>
            </div>
            <div class="row">
               <div class="col-md-4 form-group mt-3">

                    <select name="gender" id="bloodtype" class="form-select">
                    <option asp-for="gender" value="">Select Gender</option>
                    <option asp-for="gender" value="Male"> Male</option>
                    <option asp-for="gender" value="Female"> Female</option>
                </select>
                <div class="validate"></div>
                </div>
            


            
                <div class="col-md-4 form-group mt-3">

                    <select name="BloodType" id="bloodtype" class="form-select">
                        <option asp-for="BloodType" value="">Select Blood Type</option>
                        <option asp-for="BloodType" value="A"> A</option>
                        <option asp-for="BloodType" value="B">B</option>
                        <option asp-for="BloodType" value="AB">AB</option>
                        <option asp-for="BloodType" value="O">O</option>
                    </select>
                    <div class="validate"></div>
                </div>
            </div>



            <div class="text-center"><button type="submit" class="btn btn-primary">DONATE</button></div>
        </form>

    </div>
</section><!-- End Appointment Section -->